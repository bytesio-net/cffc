{
  "compilerOptions": {
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": false,
    "allowJs": false,
    "baseUrl": ".",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "alwaysStrict": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "dist"],
}
